@{
    Layout = null;
}

@model Entity.Concrete.Kullanici

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib//bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Online Masa Rezervasyon Sistemi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("KullaniciEkle", "Kullanici")">Kayıt Ol</a>
                    </li>
                </ul>
                <a href="#" style="text-decoration: none">Giriş Yap</a>
                <a href="#" style="margin-left: 20px; text-decoration: none">Çıkış Yap</a>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                @using (Html.BeginForm("KullaniciEkle", "Kullanici", FormMethod.Post))
                {
                    @Html.Label("Ad")
                    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                    <br />
                    @Html.Label("Soyad")
                    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
                    <br />
                    @Html.Label("Eposta")
                    @Html.TextBoxFor(x => x.Eposta, new { @class = "form-control" })
                    <br />
                    @Html.Label("Gsm")
                    @Html.TextBoxFor(x => x.Gsm, new { @class = "form-control" })
                    <br />
                    @Html.Label("Görev")
                    @Html.TextBoxFor(x => x.Gorev, new { @class = "form-control" })
                    <br />
                    @Html.Label("Departman")
                    @await Component.InvokeAsync("DepartmanList")

                    <button class="btn btn-success">Güncelle</button>
                }
            </div>

        </div>



    </div>
</body>
</html>