@using Entity.DTOs
@model List<KullaniciDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive pb-6">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Ad</th>
                <th scope="col" class="sort" data-sort="status">Soyad</th>
                <th scope="col" class="sort" data-sort="completion">Eposta</th>
                <th scope="col" class="sort" data-sort="completion">Gsm</th>
                <th scope="col" class="sort" data-sort="completion">Görev</th>
                <th scope="col" class="sort" data-sort="completion">Departmanı</th>
                <th scope="col" class="sort" data-sort="completion">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Güncelle</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        <div class="media align-items-center">
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@item.KullaniciId</span>
                            </div>
                        </div>
                    </th>
                    <td>
                        @item.Ad
                    </td>
                    <td>
                        @item.Soyad
                    </td>
                    <td>
                        @item.Eposta
                    </td>
                    <td>
                        @item.Gsm
                    </td>
                    <td>
                        @item.Gorev
                    </td>
                    <td>
                        @item.DepartmanAdı
                    </td>
                    <td>
                        <a href="/KullaniciAdmin/KullaniciSil/@item.KullaniciId" class="btn btn-primary">Sil</a>
                    </td>
                    <td>
                        <a href="/KullaniciAdmin/KullaniciGuncelle/@item.KullaniciId" class="btn btn-primary">Güncelle</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/KullaniciAdmin/KullaniciEkle" class="btn btn-primary">Kullanıcı Ekle</a>
</div>
